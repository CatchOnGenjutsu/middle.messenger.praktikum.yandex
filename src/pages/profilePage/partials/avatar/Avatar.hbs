
<div class="avatar__container {{#unless inputsSettings.isEditData}}avatar__container--editable{{/unless}}">
  {{#if inputsSettings.avatarUrl}}
    <img src="{{inputsSettings.avatarUrl}}" alt="Аватар пользователя" class="avatar__image">
  {{else}}
    <img class="avatar__image avatar__image_placeholder" src="/icons/avatar_image_icon.png" alt="Фото профиля">
  {{/if}}

  <div class="avatar__overlay">
    <span class="avatar__text">Поменять аватар</span>
  </div>
</div>
